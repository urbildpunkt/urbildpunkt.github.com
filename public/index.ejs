<div class="index-hero">
  <div class="hero-intro">
    <h2>I'm a product designer, with a focus on user experience and a love for data.</h2>
  </div>
</div>

<section class="expertise">
  <div class="skills">
    <article class="icon-card strategy">
      <img class="clipboard" src="/assets/images/Clipboard-Plan.svg">
    </article>
    <article class="icon-card design">
      <img class="mind-map" src="/assets/images/Mind-Map-Paper.svg">
    </article>
    <article class="icon-card code">
      <img class="coding-html" src="/assets/images/Coding-Html.svg">
    </article>
  </div>
</section>

<section class="featured projects-list">
  <h2>Featured Projects <a href="/projects">View All ></a></h2>
  <ul>
    <% for(slug in public.projects._data) { %>

      <% if(slug != "index") { %>
        <% var project = public.projects._data[slug] %>
        <% var classes = project.published == false ? 'unpublished' : null  %>

        <% if(project.published !== false && project.featured == true) { %>
          <li class="project <%- slug %> <%- classes %>">
            <a href="/projects/<%- slug %>">
              <header>
                <h3 class="project-title"><i class="project-icon"></i><%- project.title %></h3>
                <span class="category"><%- project.category %></span>
              </header>
              <div class="project-content">
                <img class="img-responsive" src="/assets/images/projects/<%- slug %>/thumb.png" title="<%- project.title %>" %>
                <p class="project-description"><%- project.description %>
                  <br><small><%- project.technology %></small>
                  <% if(project.link) { %>
                    <br><a href="<%- project.link %>" target="_blank">View Project</a>
                    <% } %>
                  </p>
              </div>
            </a>
          </li>

        <% } else if(project.published == false && project.featured == true) { %>

          <li class="project <%- slug %> <%- classes %>">
            <div class="project-content">
              <img class="img-responsive" src="/assets/images/projects/<%- slug %>/thumb.png" title="<%- project.title %>" %>
              <p class="project-description"><%- project.description %>
                <br><small><%- project.technology %></small>
                <% if(project.link) { %>
                  <br><a href="<%- project.link %>" target="_blank">View Project</a>
                  <% } %>
                </p>
            </div>
            <header>
              <h3 class="project-title"><i class="project-icon"></i><%- project.title %></h3>
              <span class="category"><%- project.category %></span>
            </header>
          </li>

        <% } %>
      <% } %>
    <% } %>
  </ul>
</section>
